<!DOCTYPE html>
<html>
<head>
  <!-- this enables responsive features in browser -->
  <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>

  <!-- your & Flatty stylesheets -->
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= yield(:head) %>
  <%= csrf_meta_tags %>
  <!-- if you are going to support IE8 you must include these files -->
  <!--[if lt IE 9]>
  <script src='assets/javascripts/ie/html5shiv.js' type='text/javascript'></script>
  <script src='assets/javascripts/ie/respond.min.js' type='text/javascript'></script>
  <![endif]-->
</head>
<body class="contrast-sea-blue">
  <header>
    <nav class="navbar navbar-default">

      <!-- application logo -->
      <a class="navbar-brand" href="index.html">
        <!-- application logo visible on large screens -->
        <%= image_tag "logo.svg", size: "81x21", alt: "Flatty", class:"logo"  %>
        <!-- application logo visible on small screens -->
        <%= image_tag "logo_xs.png", size: "21x21", alt: "Flatty", class:"logo-xs" %>
      </a>

      <!-- main nav toggler (show/hide) -->
      <a class="toggle-nav btn pull-left" href="#">
        <i class="fa fa-bars"></i>
      </a>

      <!-- dropdowns -->
      <ul class="nav">

        <!-- light dropdown -->
        <li class="dropdown light only-icon">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">
            <!-- ... -->
          </a>
          <ul class="dropdown-menu">
            <li>
              <div>test</div>
            </li>
          </ul>
          <!-- ... -->
        </li>

        <!-- medium dropdown & widget -->
        <li class="dropdown medium only-icon widget">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">
            <span class="user-name">5</span>
            <b class="caret"></b>
            <!-- ... -->
          </a>
          <ul class="dropdown-menu">
            <li>
              <div>test</div>
            </li>
          </ul>
          <!-- ... -->
        </li>

        <!-- dark dropdown & user menu -->
        <li class="dropdown dark user-menu">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">
            <%= image_tag "avatar.jpg", size: "23x23", alt: "Mila Kunis" %>
            <span class="user-name">Mila Kunis</span>
            <b class="caret"></b>
          </a>
          <!-- ... -->
          <ul class="dropdown-menu">
            <li>
              <div>test</div>
            </li>
          </ul>
        </li>
      </ul>

      <!-- search form - hidden on phone -->
      <form action="search_results.html" class="navbar-form navbar-right hidden-xs" method="get">
        <button class="btn btn-link fa fa-search" name="button" type="submit"></button>
        <div class="form-group">
          <input value="" class="form-control" placeholder="Search..." autocomplete="off" id="q_header" name="q" type="text">
        </div>
      </form>
    </nav>
  </header>
  <div id="wrapper">
    <div id="main-nav-bg"></div>
    <nav id="main-nav">
      <div class="navigation">

        <!-- search form visible on phone -->
        <div class="search">
          <form action="search_results.html" method="get">
            <div class="search-wrapper">
              <input value="" class="search-query form-control" placeholder="Search..." autocomplete="off" name="q" type="text">
              <button class="btn btn-link fa fa-search" name="button" type="submit"></button>
            </div>
          </form>
        </div>

        <!-- navigation items -->
        <%= flatty_navigation do %>
          <!-- single navigation item -->
          <%= flatty_navigation_item admin_welcome_index_path, "Dashboard", "fa-dashboard" %>

          <%= flatty_navigation_drop_down 'Accounts', 'admin/accounts', 'fa-users' do %>
            <%= flatty_navigation_item overview_admin_accounts_path, 'Overview', 'fa-bar-chart-o'%>
            <%= flatty_navigation_item admin_accounts_path, 'List', 'fa-list'%>
            <%= flatty_navigation_item new_admin_account_path, 'Create', 'fa-plus'%>
            <%= flatty_navigation_item settings_admin_accounts_path, 'Settings', 'fa-cog'%>
          <% end %>

          <%= flatty_navigation_drop_down "Schools", 'admin/schools', "fa-graduation-cap" do %>
            <%= flatty_navigation_item overview_admin_schools_path, 'Overview', 'fa-bar-chart-o' %>
            <%= flatty_navigation_item admin_schools_path, 'List', 'fa-list' %>
            <%= flatty_navigation_item new_admin_school_path, 'Create', 'fa-plus' %>
            <%= flatty_navigation_item settings_admin_schools_path, 'Settings', 'fa-cog' %>
          <% end #End Navigation drop down%>
        <% end #End Navigation %>

      </div>
    </nav>
    <section id="content">
      <div class="container">
        <% flash.each do |name, msg| %>
            <%= flatty_alert name, msg %>
        <% end %>
        <div class="row" id="content-wrapper">
          <div class="col-xs-12">
            <%= yield %>
          </div>
        </div>

        <!-- optional footer -->
        <footer id="footer">
          <div class="footer-wrapper">
            <div class="row">
              <div class="col-sm-6 text">
                Copyright Â© 2013 ForStudents
              </div>
              <div class="col-sm-6 buttons">
                <a class="btn btn-link" href="http://www.bublinastudio.com/flatty">Preview</a>
                <a class="btn btn-link" href="https://wrapbootstrap.com/theme/flatty-flat-administration-template-WB0P6NR1N">Purchase</a>
              </div>
            </div>
          </div>
        </footer>

      </div>
    </section>
  </div>
</body>
</html>
