<!DOCTYPE html>
<html>
<head>
  <!-- this enables responsive features in browser -->
  <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>

  <!-- your & Flatty stylesheets -->
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>

  <!-- if you are going to support IE8 you must include these files -->
  <!--[if lt IE 9]>
  <script src='assets/javascripts/ie/html5shiv.js' type='text/javascript'></script>
  <script src='assets/javascripts/ie/respond.min.js' type='text/javascript'></script>
  <![endif]-->
</head>
<body class="contrast-sea-blue">
  <header>
    <nav class="navbar navbar-default">

      <!-- application logo -->
      <a class="navbar-brand" href="index.html">
        <!-- application logo visible on large screens -->
        <%= image_tag "flatty/logo.svg", size: "81x21", alt: "Flatty", class:"logo"  %>
        <!-- application logo visible on small screens -->
        <%= image_tag "flatty/logo_xs.png", size: "21x21", alt: "Flatty", class:"logo-xs" %>
      </a>

      <!-- main nav toggler (show/hide) -->
      <a class="toggle-nav btn pull-left" href="#">
        <i class="icon-reorder"></i>
      </a>

      <!-- dropdowns -->
      <ul class="nav">

        <!-- light dropdown -->
        <li class="dropdown light only-icon">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">
            <!-- ... -->
          </a>
          <ul class="dropdown-menu">
            <li>
              <div>test</div>
            </li>
          </ul>
          <!-- ... -->
        </li>

        <!-- medium dropdown & widget -->
        <li class="dropdown medium only-icon widget">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">
            <%= image_tag "flatty/avatar.jpg", size: "23x23", alt: "Mila Kunis" %>
            <span class="user-name">Mila Kunis</span>
            <b class="caret"></b>
            <!-- ... -->
          </a>
          <ul class="dropdown-menu">
            <li>
              <div>test</div>
            </li>
          </ul>

          <!-- ... -->
        </li>

        <!-- dark dropdown & user menu -->
        <li class="dropdown dark user-menu">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">
            <%= image_tag "flatty/avatar.jpg", size: "23x23", alt: "Mila Kunis" %>
            <span class="user-name">Mila Kunis</span>
            <b class="caret"></b>
          </a>
          <!-- ... -->
          <ul class="dropdown-menu">
            <li>
              <div>test</div>
            </li>
          </ul>
        </li>
      </ul>

      <!-- search form - hidden on phone -->
      <form action="search_results.html" class="navbar-form navbar-right hidden-xs" method="get">
        <button class="btn btn-link icon-search" name="button" type="submit"></button>
        <div class="form-group">
          <input value="" class="form-control" placeholder="Search..." autocomplete="off" id="q_header" name="q" type="text">
        </div>
      </form>
    </nav>
  </header>
  <div id="wrapper">
    <div id="main-nav-bg"></div>
    <nav id="main-nav">
      <div class="navigation">

        <!-- search form visible on phone -->
        <div class="search">
          <form action="search_results.html" method="get">
            <div class="search-wrapper">
              <input value="" class="search-query form-control" placeholder="Search..." autocomplete="off" name="q" type="text">
              <button class="btn btn-link icon-search" name="button" type="submit"></button>
            </div>
          </form>
        </div>

        <!-- navigation items -->
        <ul class="nav nav-stacked">

          <!-- single navigation item -->
          <li class="active">
            <a href="index.html">
              <i class="icon-dashboard"></i>
              <span>Dashboard</span>
            </a>
          </li>

          <!-- four level dropdown -->
          <li>
            <a class="dropdown-collapse" href="#">
              <i class="icon-folder-open-alt"></i>
              <span>Four level dropdown</span>
              <i class="icon-angle-down angle-down"></i>
            </a>
            <ul class="nav nav-stacked">
              <li>
                <a class="dropdown-collapse" href="#">
                  <i class="icon-caret-right"></i>
                  <span>Second level</span>
                  <i class="icon-angle-down angle-down"></i>
                </a>
              </li>
              <li>
                <a class="dropdown-collapse" href="#">
                  <i class="icon-caret-right"></i>
                  <span>Second level</span>
                  <i class="icon-angle-down angle-down"></i>
                </a>
                <ul class="nav nav-stacked">
                  <li>
                    <a class="dropdown-collapse" href="#">
                      <i class="icon-caret-right"></i>
                      <span>Third level</span>
                      <i class="icon-angle-down angle-down"></i>
                    </a>
                    <ul class="nav nav-stacked">
                      <li>
                        <a href="#">
                          <i class="icon-caret-right"></i>
                          <span>Fourth level</span>
                        </a>
                      </li>
                      <li>
                        <a href="#">
                          <i class="icon-caret-right"></i>
                          <span>Another fourth level</span>
                        </a>
                      </li>
                    </ul>
                  </li>
                </ul>
              </li>
            </ul>
          </li>
        </ul>
      </div>
    </nav>
    <section id="content">
      <div class="container">
        <div class="row" id="content-wrapper">
          <div class="col-xs-12">
            <%= yield %>
          </div>
        </div>

        <!-- optional footer -->
        <footer id="footer">
          <div class="footer-wrapper">
            <div class="row">
              <div class="col-sm-6 text">
                Copyright Â© 2013 Your Project Name
              </div>
              <div class="col-sm-6 buttons">
                <a class="btn btn-link" href="http://www.bublinastudio.com/flatty">Preview</a>
                <a class="btn btn-link" href="https://wrapbootstrap.com/theme/flatty-flat-administration-template-WB0P6NR1N">Purchase</a>
              </div>
            </div>
          </div>
        </footer>

      </div>
    </section>
  </div>
</body>
</html>
